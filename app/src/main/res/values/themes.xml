<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InventoryApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="android:textColorPrimary">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButtonStyle</item>
    </style>

    <style name="AlertDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="AlertDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="LabelOne">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/manjari</item>
    </style>

    <style name="LabelTwo">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/manjari</item>
    </style>

    <style name="Prefix">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/manjari</item>
    </style>

</resources>